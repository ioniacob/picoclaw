{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/chat.js": {
      "runtime": "nodejs"
    },
    "api/whatsapp.js": {
      "runtime": "nodejs"
    }
  },
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/chat.js"
    },
    {
      "src": "/api/whatsapp",
      "dest": "/api/whatsapp.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/index.html"
    },
    {
      "src": "/admin",
      "dest": "/admin/index.html"
    },
    {
      "src": "/health",
      "dest": "/api/chat.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "CONFIG_PATH": "/tmp/config.json",
    "NODE_ENV": "production",
    "ADMIN_USERNAME": "admin",
    "ADMIN_PASSWORD": "picoclaw123"
  }
}